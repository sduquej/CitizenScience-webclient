<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ionicframework.simpleformapp577697" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Simple Form App</name>
  <description>
        Proof of concept on Ionic for Citizen Science data collection forms
    </description>
  <author email="sduquej@gmail.com" href="sduquej@gmail.com">
      Sebasti√°n D.
    </author>
  <content src="index.html"/>
  <access origin="*"/>
